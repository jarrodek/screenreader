{
  "name": "Screen Reader",
  "version": "0.6.0",
  "manifest_version": 2,
  "description": "This extension provides aid for the visually handicapped.",
  "icons": { 
      "32": "img/icon32.png",
      "48": "img/icon48.png"
  },
  "browser_action": {
    "default_icon": "img/icon32.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery.js",  "js/video.js", "js/audio.js"],
      "css": ["css/main.css"],
      "run_at": "document_end"
    }
  ]
}