{
  "name": "Screen Reader for Google Chrome",
  "short_name": "Screen Reader",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "This extension provides aid for the visually impaired people.",
  "default_locale": "en",
  "minimum_chrome_version": "120",
  "icons": {
      "32": "img/32x32-on.png",
      "48": "img/48x48-on.png",
      "128": "img/128x128-on.png"
  },
  "background": {
    "service_worker": "src/worker.js",
    "type": "module"
  },
  "permissions": [
    "storage", "tts"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/audio.js",
        "src/content/video.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "img/16x16-on.png",
      "32": "img/32x32-on.png"
    },
    "default_title": "Show options",
    "default_popup": "options.html"
  }
}
