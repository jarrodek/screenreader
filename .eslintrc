{
  "env": {
    "es2021": true,
    "browser": true,
    "node": false
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error"
  },
  "globals": {
    "chrome": true
  },
  "overrides": [
    {
      "files": [
        "web-dev-server.config.mjs",
        "playwright.config.js"
      ],
      "env": {
        "browser": false,
        "node": true
      }
    },
    {
      "files": [
        "test/**/*.test.js"
      ],
      "env": {
        "browser": true,
        "node": true
      }
    }
  ]
}
